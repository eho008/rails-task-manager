<h1><%= @task.title %></h1>
<p><%= @task.details%></p>
<p><%= @task.completed%> <% if @task.completed == false %>
                              <%= 'This task is not completed yet' %>
                              <% else %>
                              <%= 'This task is completed' %>
                              <% end %>
</p>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit", edit_task_path %>
<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
